
<div class="container">
    <div class="container">
            <ul class="list-group left-list">
            {{#each burgers}}
                {{#unless devoured}}
                    {{>burger/undevoured-list this}}
                {{/unless}}
            {{/each}}
        </ul>
        <ul class="list-group right-list">
            {{#each burgers}}
                {{#if devoured}}
                    {{>burger/devoured-list this}}
                {{/if}}
            {{/each}}
        </ul>
    </div>
   <div class="clear-both"></div>
    <div class="container text-center add-burger">
        <h3>Add new burger</h3>
        <form class="create-form">
            <div class="form-group ">
                <label for="burger">Burger name</label>
                <input type="text" class="form-control text-center" name="burger" id="burger" placeholder="Enter the burger name">
            </div>
            <button type="submit" class="btn btn-primary">Kick it</button>
        </form>
    </div>
 </div>